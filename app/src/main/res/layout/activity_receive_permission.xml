<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    tools:context="byeonghoon.x579.smartlock.cardapp.ReceivePermissionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Given Permission Code"
        android:id="@+id/receive_perm_direction"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="39dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="4"
            android:id="@+id/permission_01"
            android:labelFor="@id/permission_01"
            android:layout_marginTop="162dp"
            android:layout_marginStart="12dp"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="4"
            android:id="@+id/permission_02"
            android:labelFor="@id/permission_02"
            android:layout_marginTop="162dp"
            android:layout_marginStart="12dp"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="3"
            android:id="@+id/permission_03"
            android:labelFor="@id/permission_03"
            android:layout_marginTop="162dp"
            android:layout_marginStart="12dp"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="3"
            android:id="@+id/permission_04"
            android:labelFor="@id/permission_04"
            android:layout_marginTop="162dp"
            android:layout_marginStart="12dp"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:id="@+id/button_accept_permission"
            android:layout_marginTop="230dp"
            android:layout_marginStart="55dp"
            android:onClick="buttonAcceptPermPressed"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/button_cancel_permission"
            android:layout_marginTop="230dp"
            android:layout_marginStart="55dp"
            android:onClick="buttonBackPermPressed"/>
    </LinearLayout>


</RelativeLayout>
