<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    tools:context="byeonghoon.x579.smartlock.cardapp.SendPermissionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configure permission"
        android:id="@+id/receive_perm_direction"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="39dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="102dp"
            android:text="Date: "
            android:textSize="16sp"
            android:id="@+id/button_date_pick"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="14"
            android:id="@+id/permission_date"
            android:layout_marginTop="102dp"
            android:layout_marginStart="12dp"
            android:textSize="16sp"
            android:enabled="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="150dp"
            android:text="Time: "
            android:textSize="16sp"
            android:id="@+id/button_time_pick"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="14"
            android:id="@+id/permission_time"
            android:layout_marginTop="150dp"
            android:layout_marginStart="12dp"
            android:textSize="16sp"
            android:enabled="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="198dp"
            android:text="Duration (1~60min): "
            android:textSize="16sp"
            android:id="@+id/button_duration_pick"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="7"
            android:id="@+id/permission_duration"
            android:layout_marginTop="198dp"
            android:layout_marginStart="12dp"
            android:textSize="16sp"
            android:enabled="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:id="@+id/button_accept_permission"
            android:layout_marginTop="246dp"
            android:layout_marginStart="55dp"
            android:onClick="buttonAcceptPermPressed"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/button_cancel_permission"
            android:layout_marginTop="246dp"
            android:layout_marginStart="55dp"
            android:onClick="buttonBackPermPressed"/>
    </LinearLayout>



</RelativeLayout>
